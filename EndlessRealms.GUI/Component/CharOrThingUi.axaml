<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"             
             Foreground="LightGreen"
             Width="500"
             Margin="5"
             x:Class="EndlessRealms.Gui.Component.CharOrThingUi">
  
  <StackPanel Orientation="Horizontal" Margin="20 5 0 5">
    <Button Click="OnTalkClicked">@</Button>
    <Button Click="OnActionClicked">!</Button>
    <TextBlock x:Name="numberText"
               Foreground="White"
               Margin="5 0 5 0"
               VerticalAlignment="Center"></TextBlock>
    <TextBlock VerticalAlignment="Center"
               x:Name="descriptionText"></TextBlock>   
  </StackPanel>  
</UserControl>
